<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fhdo.fragmentation_demo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".portrait"
            android:label="@string/title_activity_portrait" >
        </activity>
        <activity
            android:name=".landscape"
            android:label="@string/title_activity_landscape" >

            <!-- android:screenOrientation="landscape" -->
        </activity>
        <activity
            android:name=".portrait2"
            android:label="@string/title_activity_portrait2" >
        </activity>
    </application>

</manifest>
